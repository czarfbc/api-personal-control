{
  "compilerOptions": {
    "target": "ES2021",                                  
    "module": "commonjs",                                
    "rootDir": "./src",
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                    
    "skipLibCheck": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,                            
  }
}
